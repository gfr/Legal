        {{ modalHelper.modalWindow(policyName, policyUrl, 'privacy-policy') }}
        <div class="form-group{% if fieldErrors.privacypolicy|default %} has-error{% endif %}">
            <label class="col-sm-3 control-label">{{ policyName }}</label>
