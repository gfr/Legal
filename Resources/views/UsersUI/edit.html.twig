            {% else %}
                <span class="form-control-static">{{ acceptedPolicies.cancellationRightPolicy ? __('Accepted.') : __('Not accepted.') }}</span>
            {% endif %}
            </div>
        </div>
    {% endif %}
</fieldset>
{% endif %}
